@{
    ViewBag.Title = "Show Data";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section scripts {
    <script src="~/Scripts/Site.js"></script>
}
<div class="jambotron">
    <h2>Show Data</h2>
    <div class="panel panel-primary">
        <div class="panel-heading">Enter params and press 'Show'</div>
        <div class="panel-body">
            <form class="form-horizontal">
                <div class="form-group">
                    <label for="inputColorpicker1" class="col-sm-2 control-label">Color</label>
                    <div class="col-sm-10">
                        <input id="inputColorpicker1" class="form-control form-color-picker" type="color" value="#000000">
                    </div>
                </div>
                <div class="form-group">
                    <label for="fontSelect1" class="col-sm-2 control-label">Font</label>
                    <div class="col-sm-10">
                        <div id="fontSelect1" class="bfh-selectbox bfh-googlefonts" data-font="Lato"></div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="dateFromPicker1" class="col-sm-2 control-label">Date from</label>
                    <div class="col-sm-10">
                        <div id="fontSelect1" class="bfh-datepicker" data-format="d.m.y" data-date="today"></div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="dateToPicker1" class="col-sm-2 control-label">Date to</label>
                    <div class="col-sm-10">
                        <div id="fontSelect1" class="bfh-datepicker" data-format="d.m.y" data-date="today"></div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="button" class="btn btn-default" onclick="showData()">Show</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>